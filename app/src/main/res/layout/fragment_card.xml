<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CardFragment"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCardElo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#039DD5"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/icon_bank"
                android:src="@drawable/ic_bank" />

            <TextView
                android:id="@+id/tvElo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="75dp"
                android:gravity="bottom"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/elo_card"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/text_card"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvCardLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cvCardElo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:text="@string/tv_card_limit"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvAvailableCardLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_available_card_limit"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/blue_app1"
        app:layout_constraintTop_toBottomOf="@+id/tvCardLimit"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCardVisibilityOff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAvailableCardLimit"
        app:layout_constraintBottom_toBottomOf="@+id/tvAvailableCardLimit"/>

    <TextView
        android:id="@+id/tvCurrentInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_current_invoice"
        android:textColor="@color/gray1"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAvailableCardLimit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCurrentInvoiceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_current_invoice_amount"
        android:textStyle="bold"
        android:textSize="16sp"
    app:layout_constraintTop_toBottomOf="@id/tvCurrentInvoice"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="75"
        android:progressBackgroundTint="#0DADFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentInvoiceAmount" />


</androidx.constraintlayout.widget.ConstraintLayout>